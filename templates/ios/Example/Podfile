source 'https://bitbucket.org/growabanana/fitlab-specs.git'
source 'https://github.com/CocoaPods/Specs.git'

platform :ios, '10.0'

use_frameworks!

def shared_pods
  pod '${POD_NAME}', :path => '../'
  # Add your shared pods here
  # Keep them local to benefit from the global repository
  # Example:
  # pod 'FLBluetoothKit', :path => '../FLBluetoothKit/'
  # pod 'FLDataKit', :path => '../FLDataKit/'
  # pod 'FLLogKit', :path => '../FLLogKit/'
  # pod 'RZBluetoothRLB', :path => '../RZBluetoothRLB/'
  # pod 'ZSInjectKit', :path => '../ZSInjectKit/'
end


target '${POD_NAME}_Example' do
  shared_pods

  target '${POD_NAME}_Tests' do
    inherit! :search_paths

    ${INCLUDED_PODS}
  end
end

target '${POD_NAME}Watch' do
  shared_pods

  platform :watchos, '4.0'
end


target '${POD_NAME}Watch-Extension' do
  shared_pods

  platform :watchos, '4.0'
end

